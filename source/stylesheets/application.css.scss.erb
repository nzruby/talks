//= require reset

$article-width: 600px;
$aside-width: 200px;
$gutter: 80px;
$ruby-red: #CA1D00;
$light-grey: #eee;

body {
  background: white;
  color: black;
  font: 14pt/1.6em "proxima-nova", sans-serif;
  margin: 2em auto;
  width: $article-width + ($aside-width + $gutter) * 2;
  -webkit-font-smoothing: antialias;
}

iframe {
  border: 1px solid #ccc;
  margin: 1em 0;
  width: $article-width - 2px;
  height: 440px;
}

strong {
  font-weight: bold;
}

em {
  font-style: italic;
}

p {
  margin-bottom: 1em;
}

a {
  color: $ruby-red;
  text-decoration: none;
  
  &:hover {
    border-bottom: 2px solid;
  }
}

blockquote {
  border-left: 4px solid $light-grey;
  color: #777;
  margin: 1em 0;
  padding: 0 1em;
}

ul, ol {
  margin: 1em 0 1em 2em;
}

ul {
  list-style-type: square;
}

ol {
  list-style-type: decimal;
}

h1, h2 {
  line-height: 1.2em;
  font-weight: 600;
  font-family: "freight-sans-pro", sans-serif;
}

h1 {
  font-size: 2em;
  color: $ruby-red;
}

h2 {
  font-size: 1.6em;
  margin-bottom: 0.5em;
}

hr {
  color: $light-grey;
  background-color: $light-grey;
  height: 0.2em;
  border: 0;
}

.upcoming {
  display: none;
}

aside {
  font-weight: 600;
  font-family: "freight-sans-pro", sans-serif;
  float: left;
  width: 200px;
  
  .logo {
    color: black;
    display: block;
    font-size: 1.6em;
    text-align: center;
    
    img {
      margin-bottom: 0.5em;
    }

    &:hover {
      border-style: none;
    }
  }
  
  nav {
    margin: 1em 0;
  
    a {
      display: block;
      float: left;
      clear: left;
      margin: 0.5em;
      color:  #CA1D00;
      border-bottom: 2px solid $light-grey;
    }
  }
}

article {
  float: right;
  margin: 2em ($aside-width + $gutter) 2em 0;
  width: $article-width;
}

.author {
  .photo {
    float: right;
    border-radius: 150px;
  }
}

.meta {
  color: #999;
  font-size: 0.9em;

  span, time {
    color: #666;
  }
}

pre, code {
  font-family: Monaco, monospace;
  font-size: 0.8em;
}

pre {
  background: #f3f3f3;
  padding: 0.5em 1em;
  margin: 1em 0;
  overflow: auto;
}

code {
  background: $light-grey;
  color: #333;
  border-radius: 3px;
  padding: 0.1em 0.2em;
}

.talk-overview {
  margin-bottom: 2em;

  h2 {
    margin-bottom: 0;
  }

  .upcoming {
    display: inline;
  }
}

.talk {
  .meta {
    margin-bottom: 1em;
  }

  .upcoming {
    font-style: italic;
    margin-bottom: 1em;
  }
}

